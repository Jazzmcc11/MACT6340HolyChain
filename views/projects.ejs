<%- include("header") %>

<main class="py-5">
  <div class="container text-center">
    <h1 class="mb-4">The Mixtape Projects</h1>

    <!-- Fade-in animation applied here -->
    <div class="row justify-content-center fadein">
      <% if (projectArray && projectArray.length > 0) { %>
        <% projectArray.forEach((item) => { %>
          <%- include("partials/projectCard", { item: item }) %>
        <% }) %>
      <% } else { %>
        <p>No projects found in the database.</p>
      <% } %>
    </div>
  </div>
</main>

<%- include("footer") %>
