<%- include("header") %>

<main class="py-5">
  <div class="container text-center">
    <h1 class="mb-4">The Mixtape Projects</h1>
    <div class="row justify-content-center">
      <% projectArray.forEach((item, index) => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100">
            <img src="/images/<%= item.image %>" class="card-img-top" alt="<%= item.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= item.title %></h5>
              <a href="/project/<%= index + 1 %>" class="btn btn-outline-dark mt-2">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</main>

<%- include("footer") %>
