<%- include("header") %>

<main class="container py-5" style="min-height: 80vh;">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-body p-5">
          <h1 class="text-center fw-bold mb-3" style="color: var(--text-color, #222);">
            Letâ€™s Connect ðŸ’Œ
          </h1>
          <p class="text-center text-muted mb-4">
            Have a question, collaboration idea, or just want to say hi?  
            Fill out the form below and Iâ€™ll get back to you soon.
          </p>

          <form id="contactForm" action="/contact" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label fw-semibold">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Your name"
                required
              />
            </div>

            <div class="mb-3">
              <label for="email" class="form-label fw-semibold">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Your email address"
                required
              />
            </div>

            <div class="mb-3">
              <label for="message" class="form-label fw-semibold">Message</label>
              <textarea
                class="form-control"
                id="message"
                name="message"
                rows="5"
                placeholder="Write your message here..."
                required
              ></textarea>
            </div>

            <button type="submit" class="btn btn-dark w-100 mt-2">
              Send Message
            </button>

            <!-- Loader -->
            <div class="loader text-center mt-3" id="loader">
              <div class="hourglass"></div>
              <p class="text-muted mt-2">Sending your message...</p>
            </div>
          </form>

          <% if (successMessage) { %>
            <div class="alert alert-success text-center mt-4"><%= successMessage %></div>
          <% } %>

          <% if (errorMessage) { %>
            <div class="alert alert-danger text-center mt-4"><%= errorMessage %></div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>

<style>
  /* Reuse your siteâ€™s variables (fallbacks provided) */
  body {
    background-color: var(--background-color, #fafafa);
    color: var(--text-color, #222);
  }

  .card {
    border-radius: 16px;
  }

  /* Hourglass loader styled to match site accent color */
  .loader {
    display: none;
    flex-direction: column;
    align-items: center;
  }

  .hourglass {
    border: 4px solid var(--accent-color, #d62828);
    border-top: 4px solid transparent;
    border-radius: 50%;
    width: 36px;
    height: 36px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>

<script>
  const form = document.getElementById("contactForm");
  const loader = document.getElementById("loader");

  form.addEventListener("submit", () => {
    loader.style.display = "flex";
  });
</script>

